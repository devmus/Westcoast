{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}